{
  "name": "prompt-template-builder",
  "version": "1.0.0",
  "description": "Browser extension for personal prompt template management with direct AI integration",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "test": "vitest",
    "test:ci": "vitest run --coverage --reporter=verbose",
    "test:watch": "vitest --watch",
    "pack": "npm run build && web-ext build -s dist -a artifacts",
    "lint": "eslint src",
    "lint:fix": "eslint src --fix",
    "type-check": "tsc --noEmit",
    "format": "prettier --write src/**/*.{ts,tsx,js,jsx}",
    "format:check": "prettier --check src/**/*.{ts,tsx,js,jsx}",
    "clean": "rm -rf dist artifacts node_modules/.cache",
    "validate": "npm run type-check && npm run lint && npm run test:ci && npm run build"
  },
  "dependencies": {
    "@popperjs/core": "^2.11.8",
    "@radix-ui/react-checkbox": "^1.3.2",
    "@radix-ui/react-label": "^2.1.7",
    "@radix-ui/react-separator": "^1.1.7",
    "@radix-ui/react-slot": "^1.2.3",
    "@radix-ui/react-tabs": "^1.1.12",
    "@radix-ui/react-tooltip": "^1.2.7",
    "@tiptap/pm": "^2.14.0",
    "@tiptap/react": "^2.14.0",
    "@tiptap/starter-kit": "^2.14.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "fuse.js": "^7.0.0",
    "lucide-react": "^0.515.0",
    "nanoid": "^5.0.4",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "tailwind-merge": "^3.3.1",
    "tailwindcss-animate": "^1.0.7",
    "zustand": "^4.4.7"
  },
  "devDependencies": {
    "@crxjs/vite-plugin": "^2.0.0-beta.23",
    "@eslint/js": "^9.29.0",
    "@tailwindcss/typography": "^0.5.16",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^14.1.2",
    "@types/chrome": "^0.0.258",
    "@types/node": "^24.0.1",
    "@types/react": "^18.2.43",
    "@types/react-dom": "^18.2.17",
    "@typescript-eslint/eslint-plugin": "^6.14.0",
    "@typescript-eslint/parser": "^6.21.0",
    "@vitejs/plugin-react": "^4.2.1",
    "@vitest/coverage-v8": "^1.6.1",
    "autoprefixer": "^10.4.21",
    "eslint": "^8.55.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "globals": "^16.2.0",
    "jsdom": "^26.1.0",
    "postcss": "^8.5.5",
    "prettier": "^3.1.1",
    "tailwindcss": "^3.4.17",
    "typescript": "^5.3.3",
    "typescript-eslint": "^8.34.0",
    "vite": "^5.0.8",
    "vitest": "^1.1.0",
    "web-ext": "^7.9.0"
  },
  "keywords": [
    "chrome-extension",
    "prompt-template",
    "ai",
    "productivity"
  ],
  "author": "zayyehtut",
  "license": "MIT"
}
